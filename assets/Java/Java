document.addEventListener('DOMContentLoaded', function() {
    typeWriter(elemento);
    cost texto = elemento.innerHTML;
    elemento.innerHTML = '';

    texto.split("").forEach((letra, i) => {
        setTimeout(() => {
            elemento.innerHtML += letra;
        }, 100 * i);
    });
});


